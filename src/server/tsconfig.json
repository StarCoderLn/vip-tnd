{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react",
    "module": "CommonJS",
    "esModuleInterop": true, // node 的时候用这个
    "allowSyntheticDefaultImports": true, // react 用这个
    "strict": true, // 启用所有严格类型检查选项
    "typeRoots": [
      "typings",
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@interfaces/*": ["shared/*"],
      "@middlewares/*": ["middlewares/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["**/*.ts"]
}