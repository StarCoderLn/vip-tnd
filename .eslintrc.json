{
  "root": true,
  "extends": "airbnb-typescript",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn",
    "no-alert": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "arrow-body-style": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "comma-dangle": [2, "never"]
  }
}